{
    "presets": [
      "@babel/preset-env",
      [
        "@babel/preset-react",
        {
          "runtime": "automatic" // This has been included to enable the JSX Transform
        }
      ],
      "@babel/preset-typescript"
    ],
    "plugins": [
      [
        "@babel/plugin-transform-runtime", // This will remove the runtime error while using async await
        {
          "regenerator": true
        }
      ]
    ]
}